{% set isError = (type ?? 'success') == 'error' %}

<div 
    class="toast {{ isError ? 'toast--error' : 'toast--success' }}"
    role="alert"
    data-controller="toast"
    data-toast-auto-close-value="5000" {# NB: keep in sync with duration (duration-5000 class) on timerbar #}
    data-turbo-temporary
>
    <div class="toast-icon">
        {# you could even swap icon based on type here #}
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
        </svg>
        <span class="sr-only">Status icon</span>
    </div>

    <div class="toast-message" data-toast-for-js-target="message">
        {{ message|trans }}
    </div>

    <button type="button"
        class="toast-close"
        aria-label="Close"
        data-action="toast#close"
    >
        <span class="sr-only">Close</span>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
    </button>

    <div class="timerbar" data-toast-target="timerbar"></div>
</div>
